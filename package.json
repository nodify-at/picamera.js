{
  "name": "@nodify_at/picamera.js",
  "version": "1.0.3",
  "description": "High-performance, low-CPU camera capture module using picamera for Raspberry Pi",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "files": [
    "dist/**/*",
    "prebuilds/**/*",
    "binding.gyp",
    "README.md",
    "LICENSE"
  ],
  "binary": {
    "module_name": "picamera.js",
    "host": "https://github.com/nodify-at/picamera.js/releases/download/",
    "remote_path": "v{version}",
    "package_name": "{module_name}-v{version}-{platform}-{arch}.tar.gz",
    "napi_versions": [
      9
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.prod.json && node-gyp rebuild",
    "clean": "node-gyp clean && rm -rf prebuilds",
    "configure": "node-gyp configure",
    "prebuild": "prebuild --all --strip --verbose",
    "prebuild:upload": "prebuild --upload-all",
    "prepublishOnly": "npm run clean && npm run build && npm run prebuild",
    "publish:beta": "npm publish --tag beta",
    "publish:latest": "npm publish",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "camera",
    "picamera",
    "raspberry-pi",
    "raspberry-pi-5",
    "video",
    "streaming",
    "low-cpu",
    "zero-copy",
    "arm64",
    "napi",
    "addon"
  ],
  "author": "Hasan Oezdemir <office@nodify.at>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodify-at/picamera.js.git"
  },
  "bugs": {
    "url": "https://github.com/nodify-at/picamera.js/issues"
  },
  "homepage": "https://github.com/nodify-at/picamera.js#readme",
  "gypfile": true,
  "cpu": [
    "arm64"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "node-addon-api": "^8.4.0",
    "sharp": "^0.34.2",
    "ws": "^8.18.3",
    "prebuild-install": "^7.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/bindings": "^1.5.5",
    "@types/node": "^24.0.10",
    "@types/onoff": "^4.1.0",
    "@types/ws": "^8.18.1",
    "bindings": "^1.5.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^16.0.0",
    "node-gyp": "^11.2.0",
    "prebuild": "^13.0.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
